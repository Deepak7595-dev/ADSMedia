{
  "name": "n8n-nodes-adsmedia",
  "version": "1.0.0",
  "description": "n8n community node for ADSMedia Email API - send transactional and marketing emails",
  "keywords": [
    "n8n-community-node-package",
    "email",
    "marketing",
    "transactional",
    "adsmedia",
    "smtp"
  ],
  "license": "MIT",
  "homepage": "https://adsmedia.ai",
  "author": {
    "name": "ADSMedia",
    "email": "info@adsmedia.ai"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ADSMedia-ai/ADSMedia.git"
  },
  "main": "index.js",
  "scripts": {
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint nodes credentials package.json",
    "lintfix": "eslint nodes credentials package.json --fix",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/ADSMediaApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/ADSMedia/ADSMedia.node.js"
    ]
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "gulp": "^4.0.2",
    "n8n-workflow": "^1.0.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "n8n-workflow": "*"
  }
}


